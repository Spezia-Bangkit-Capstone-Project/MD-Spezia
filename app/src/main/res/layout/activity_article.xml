<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.article.ArticleActivity">

    <ImageView
        android:id="@+id/development_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/development"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In Development..."
        app:layout_constraintTop_toBottomOf="@id/development_img"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>